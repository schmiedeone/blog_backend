{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "path" : "arn:aws:s3:eu-central-1:436054152060:accesspoint/schmiede-blog-image-access-point",
      "required": true
    },
    "published_at": {
      "required": true,
      "type": "date"
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "author": {
      "via": "articles",
      "model": "author"
    }
  }
}
