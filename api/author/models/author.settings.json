{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "articles": {
      "via": "author",
      "collection": "article"
    },
    "name": {
      "type": "string"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
